# FitTrack Environment Variables
# Copy this file to .env and fill in your values

# Flask Configuration
SECRET_KEY=your-very-secret-key-change-this-in-production
FLASK_ENV=development

# Database (optional, defaults to SQLite)
# DATABASE_URL=sqlite:///instance/db.sqlite3
# DATABASE_URL=postgresql://user:password@localhost:5432/fittrack

# Admin Credentials
ADMIN_PASSWORD=Admin&4

# Google OAuth (optional - get from https://console.cloud.google.com/)
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:8501,http://127.0.0.1:8501

# Session Cookie Security (set to True in production with HTTPS)
SESSION_COOKIE_SECURE=False
